<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/violetDark</item>
        <item name="colorSecondary">@color/violet</item>
        <item name="colorAccent">@color/violetAccent</item>
    </style>

    <style name="H1" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="H2" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="H3" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="H4" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/violetAccent</item>
        <item name="android:fontFamily">@font/lato_black_italic</item>
    </style>

    <style name="P" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:lineSpacingExtra">1.4dp</item>
    </style>

    <style name="Main_Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:text">GRIASTI</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/violetBright</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
