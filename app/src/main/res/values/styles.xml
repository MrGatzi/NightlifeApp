<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/violetDark</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="colorAccent">@color/violetAccent</item>
        <item name="popupTheme">@style/PopUpTheme</item>
    </style>

    <style name="H1" parent="@android:style/TextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="H2" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="H3" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="H4" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/violetAccent</item>
        <item name="android:fontFamily">@font/lato_black_italic</item>
    </style>

    <style name="P" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:lineSpacingExtra">1.4dp</item>
    </style>

    <style name="Main_Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">Bring Me</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/violetBright</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:onClick">@color/violetAccent</item>
        <item name="android:shape">rectangle</item>
        <item name="android:width">1dip</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="Filter_Button_Bright" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:text">Ich bin ein Filter</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:drawableTop"></item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/violetBright</item>
        <item name="android:shape">rectangle</item>
        <item name="android:width">1dip</item>
        <item name="android:radius">10dp</item>
        <item name="android:onClick">
            <gradient>
                <item name="android:startColor">@color/gradientStart</item>
                <item name="android:endColor">@color/gradientEnd</item>
                <item name="android:angle">135</item>
            </gradient>
        </item>
    </style>

    <style name="Filter_Button_Dark" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">105dp</item>
        <item name="android:text">Ich bin ein Filter</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:drawableTop"></item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/violetBright</item>
        <item name="android:background">@color/violet</item>
        <item name="android:shape">rectangle</item>
        <item name="android:width">1dip</item>
        <item name="android:radius">10dp</item>
        <item name="android:onClick">
            <gradient>
                <item name="android:startColor">@color/gradientStart</item>
                <item name="android:endColor">@color/gradientEnd</item>
                <item name="android:angle">135</item>
            </gradient>
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    -->

    <style name="PopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name = "android:background">@color/white</item>
        <item name = "android:textColor">@color/greyDark</item>
    </style>

</resources>
