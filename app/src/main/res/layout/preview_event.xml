<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_outline">

    <ImageView
        android:id="@+id/preview_event_eventImage"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:src="@drawable/party"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preview_event_eventName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="15dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="Event Name"
        android:textAppearance="@style/H1"
        app:layout_constraintBottom_toBottomOf="@+id/preview_event_eventImage"
        app:layout_constraintStart_toStartOf="@+id/preview_event_eventImage" />

    <TextView
        android:id="@+id/preview_event_eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="15dp"
        android:text="Heute"
        android:textAppearance="@style/H4"
        app:layout_constraintBottom_toBottomOf="@+id/preview_event_eventImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/preview_event_eventShortDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:text="Hier wird später eine kurze Beschreibung des Events stehen. (max. 200 Zeichen)"
        android:textAppearance="@style/P"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_eventImage" />

    <View
        android:id="@+id/preview_event_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_eventShortDescription" />

    <TextView
        android:id="@+id/preview_event_eventKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="5km"
        android:textAppearance="@style/H4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_divider" />

    <TextView
        android:id="@+id/preview_event_eventPriceIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="€€€"
        android:textAppearance="@style/H4"
        app:layout_constraintStart_toEndOf="@+id/preview_event_eventKm"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_divider" />

    <Button
        android:id="@+id/preview_event_moreButton"
        style="@style/Main_Button"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="MEHR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_divider" />

    <Button
        android:id="@+id/preview_event_routeButton"
        style="@style/Main_Button"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="ROUTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/preview_event_moreButton"
        app:layout_constraintTop_toBottomOf="@+id/preview_event_divider"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>